<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cellFragment"
    android:orientation="vertical"
    android:background="@color/black">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="25dp"/>


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/orange"
            android:text="CALCULATE"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold">

        </Button>

        <ListView
            android:id="@+id/cells"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="2"
            android:layout_column="3"
            android:layout_rowSpan="2"
            android:layout_columnWeight="1"
            android:background="@color/light_gray"
            android:listSelector="@color/dark_gray">

        </ListView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="5"
            android:padding="5dp"
            android:text="Illumination [W/m2]"
            android:textColor="@color/orange"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="2"
            android:padding="5dp"
            android:text="Temperature [C]"
            android:textColor="@color/orange"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="2"
            android:layout_column="0"
            android:layout_columnWeight="2"
            android:padding="5dp"
            android:text="Resistance [Ohm]"
            android:textColor="@color/orange"
            android:textSize="15dp">

        </TextView>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/illutxt"
            android:text="1000"
            android:layout_width="0dp"
            android:layout_row="0"
            android:layout_gravity="top"
            android:layout_height="30dp"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="2"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@color/light_gray"
            ></com.google.android.material.textfield.TextInputEditText>


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/temptxt"
            android:text="25"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_row="1"
            android:layout_gravity="top"
            android:layout_column="1"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@color/light_gray"
            android:padding="5dp"></com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:text="5"
            android:layout_marginVertical="5dp"
            android:layout_gravity="top"
            android:id="@+id/restxt"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="2"
            android:textStyle="bold"
            android:background="@color/light_gray"
            android:textColor="@color/black">

        </com.google.android.material.textfield.TextInputEditText>

        <TextView
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="Show Power"
            android:textColor="@color/orange"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"></TextView>

        <CheckBox
            android:id="@+id/showcurrent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:padding="15dp">

        </CheckBox>

        <TextView
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="Show Current"
            android:layout_gravity="center_vertical"
            android:textColor="@color/orange"
            android:textSize="15dp"
            android:textStyle="bold">

        </TextView>

        <CheckBox
            android:id="@+id/showpower"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/black"
            android:padding="15dp"></CheckBox>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="25dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="Uoc[V] = "
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="Isc[A] = "
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="Pmax[W] = "
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="Upmax[V] = "
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="Ipmax[A] = "
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/uoc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/isc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>


        <TextView
            android:id="@+id/pmax"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/upmax"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/ipmax"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="FF = "
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="Uop[V] = "
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="Iop[A] = "
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="Pop[W] = "
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="Opt. Load = "
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@id/ff"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/pop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:textColor="@color/orange"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/uop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:textColor="@color/orange"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:width="0dp"
            android:height="0dp"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/iop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/optres"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>




    </GridLayout>











</androidx.appcompat.widget.LinearLayoutCompat>