<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topl"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:fillViewport="true"
        android:tag="sv"
        app:layout_constraintTop_toBottomOf="@id/bottom"
        app:layout_constraintLeft_toLeftOf="@id/topl"
        app:layout_constraintRight_toLeftOf="@id/right"
        app:layout_constraintBottom_toBottomOf="@id/topl"
        tools:context="CircuitFragment">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ll2"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ll1">

            <include
                android:id="@+id/c0"
                layout="@layout/column"
                android:tag="c0"
                android:padding = "1dp"></include>

            <include
                android:id="@+id/c1"
                layout="@layout/column"
                android:tag="c1"
                android:padding = "1dp"></include>

            <include
                android:id="@+id/c2"
                layout="@layout/column"
                android:tag="c2"
                android:padding = "1dp"></include>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintLeft_toRightOf="@id/ll1"
            app:layout_constraintRight_toRightOf="@id/ll3"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ll2">

            <include
                android:id="@+id/c3"
                layout="@layout/column"
                android:tag="c3"
                android:padding = "1dp"></include>

            <include
                android:id="@+id/c4"
                layout="@layout/column"
                android:tag="c4"
                android:padding = "1dp"></include>

            <include
                android:id="@+id/c5"
                layout="@layout/column"
                android:tag="c5"
                android:padding = "1dp"></include>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintLeft_toRightOf="@id/ll2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ll3">

            <include
                android:id="@+id/c6"
                layout="@layout/column"
                android:tag="c6"
                android:padding = "1dp"></include>

            <include
                android:id="@+id/c7"
                layout="@layout/column"
                android:tag="c7"
                android:padding = "1dp"></include>

            <include
                android:id="@+id/c8"
                layout="@layout/column"
                android:tag="c8"
                android:padding = "1dp"></include>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@id/topl"
        android:background="@color/dark_gray"
        android:id="@id/bottom">

        <TextView
            android:id="@+id/irrText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Irradiance[W/m2]="
            android:textColor="@color/orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.197"
            android:textSize="17dp"
            android:textStyle="bold"
            ></TextView>

        <TextView
            android:id="@+id/temptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature[C*]="
            android:textSize="17dp"
            android:textColor="@color/orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/irrText"
            app:layout_constraintTop_toBottomOf="@id/irrText"
            android:singleLine="true"
            android:textStyle="bold">

        </TextView>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/illumination"
            android:text="1000"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:background="@color/light_gray"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/irrText"
            app:layout_constraintTop_toTopOf="@+id/irrText"
            android:singleLine="true"
            android:maxLength="4"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/temperature"
            android:layout_width="80dp"
            android:text="25"
            android:layout_height="30dp"
            android:background="@color/light_gray"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/temptext"
            app:layout_constraintLeft_toRightOf="@id/temptext"
            android:maxLength="3"/>

        <ListView
            android:id="@+id/cells"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_marginHorizontal="15dp"
            android:listSelector="@color/dark_gray"
            app:layout_constraintBottom_toBottomOf="@+id/temperature"
            app:layout_constraintEnd_toEndOf="@id/bottom"
            app:layout_constraintLeft_toRightOf="@+id/temperature"
            app:layout_constraintTop_toTopOf="@+id/bottom"
            app:layout_constraintTop_toBottomOf="@id/bottom">

        </ListView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@id/right"
        android:layout_width="75dp"
        android:layout_height="0dp"
        android:background="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="@id/topl"
        app:layout_constraintRight_toRightOf="@id/topl"
        app:layout_constraintTop_toBottomOf="@id/bottom"
        app:layout_constraintVertical_bias="0.0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="max"
                    android:id="@+id/max"
                    android:textSize="15dp"
                    android:textColor="@color/yellow"
                    android:layout_row="0"
                    android:layout_column="0"
                    >
                </TextView>

                <ImageButton

                    android:id="@+id/eightyPercent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/cell_lightgray"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:background="@color/orange"/>

                <ImageButton
                    android:id="@+id/sixtyPercent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/light_gray"
                    android:src="@drawable/cell_lightgray"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_row="1"
                    android:layout_column="1"/>

                <ImageButton
                    android:id="@+id/fourtyPercent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/cell_lightgray"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="1"
                    />

                <ImageButton
                    android:id="@+id/twentyPercent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/orange"
                    android:src="@drawable/cell_lightgray"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_row="3"
                    android:layout_column="1"/>

                <ImageButton
                    android:id="@+id/zeroPercent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/orange"
                    android:src="@drawable/cell_lightgray"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="4"
                    android:layout_column="1"
                    >

                </ImageButton>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="min"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:id="@+id/min"
                    android:textColor="@color/yellow"
                    android:layout_row="4"
                    android:layout_column="0"
                    >
                </TextView>

            </GridLayout>




            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/orange"
                android:text="Apply"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/toggle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@color/orange"
                android:text="IRRAD"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="15dp">

            </Button>

            <TextView
                android:id="@+id/uoc"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Uoc[V]"
                android:textColor="@color/orange"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/uocval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:text="uoc"
                android:maxLength="4"
                android:layout_marginBottom="5dp">

            </TextView>

            <TextView
                android:id="@+id/isc"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Isc[A]"
                android:textColor="@color/orange"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/iscval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:textSize="15dp"
                android:text="isc"
                android:maxLength="4"
                android:layout_marginBottom="5dp">

            </TextView>

            <TextView
                android:id="@+id/pmax"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Pmax[W]"
                android:textColor="@color/orange"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pmaxval"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:text="lolo"
                android:maxLength="4"
>

            </TextView>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="FF = "
                android:textColor="@color/orange"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/ff">

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ff"
                android:textStyle="bold"
                android:id="@+id/ffval"
                android:textColor="@color/yellow"
                android:textSize="15dp"
                android:maxLength="4">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Ipmax[A]"
                android:id="@id/imax"
                android:textColor="@color/orange"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/ipmaxval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lolo"
                android:textColor="@color/yellow"
                android:textSize="15dp"
                android:textStyle="bold"
                android:maxLength="4">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Upmax[V]"
                android:id="@id/umax"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upmax"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:textSize="15dp"
                android:id="@+id/upmaxval"
                android:maxLength="4">

            </TextView>








        </LinearLayout>







    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.constraintlayout.widget.ConstraintLayout>

